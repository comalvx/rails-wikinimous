<ul>
  <% @articles.each do |article| %>
  <li>
      <h2><%= link_to article.title, article_path(article) %></h2>
      <p><%= article.content %></p>
      <%= link_to "Delete article",
        article_path(article),
        method: :delete,
        data: {confirm: "Are you sure?"}
      %>
  </li>
  <% end %>
</ul>
